{
  "name": "lucacracco/drupal-example",
  "description": "Drupal is an open source content management platform powering millions of websites and applications.",
  "type": "project",
  "license": "GPL-2.0+",
  "authors": [
    {
      "name": "Luca Cracco - craccoluca@gmail.com",
      "role": "Developer"
    }
  ],
  "require": {
    "composer/installers": "^1.0.21",
    "wikimedia/composer-merge-plugin": "~1.3",
    "drush/drush": "8.x-dev",
    "drupal/core": "8.1.8",
    "codegyre/robo": "0.7.2",
    "boedah/robo-drush": "^2.2.1",
    "drupal/admin_toolbar": "8.1.15",
    "drupal/config_installer": "8.1.3"
  },
  "require-dev": {
    "drupal/devel": "8.1.0-alpha1",
    "phpunit/phpunit": "~4.8"
  },
  "replace": {
    "drupal/core": "~8.1"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "preferred-install": "dist",
    "autoloader-suffix": "Drupal8"
  },
  "extra": {
    "merge-plugin": {
      "include": [
        "web/core/composer.json"
      ],
      "recurse": false,
      "replace": false,
      "merge-extra": false
    },
    "installer-paths": {
      "web/core": [
        "type:drupal-core"
      ],
      "web/libraries/{$name}": [
        "type:drupal-library"
      ],
      "web/modules/contrib/{$name}": [
        "type:drupal-module"
      ],
      "web/profiles/contrib/{$name}": [
        "type:drupal-profile"
      ],
      "web/themes/contrib/{$name}": [
        "type:drupal-theme"
      ],
      "drush/contrib/{$name}": [
        "type:drupal-drush"
      ]
    }
  },
  "autoload": {
    "psr-4": {
      "Drupal\\Core\\Composer\\": "core/lib/Drupal/Core/Composer",
      "LucaCracco\\Robo\\Task\\Drupal8\\": "../src/"
    }
  },
  "scripts": {
    "pre-autoload-dump": "Drupal\\Core\\Composer\\Composer::preAutoloadDump",
    "post-autoload-dump": "Drupal\\Core\\Composer\\Composer::ensureHtaccess",
    "post-package-install": "Drupal\\Core\\Composer\\Composer::vendorTestCodeCleanup",
    "post-package-update": "Drupal\\Core\\Composer\\Composer::vendorTestCodeCleanup"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://packagist.drupal-composer.org"
    }
  ]
}
