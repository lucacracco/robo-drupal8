{
  "name": "lucacracco/robo-drupal8",
  "description": "Robo Tasks for Drupal8 with configurations file.",
  "type": "robo-tasks",
  "license": "GPL-2.0+",
  "authors": [
    {
      "name": "Luca Cracco",
      "email": "craccoluca@gmail.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Lucacracco\\Drupal8\\Robo\\": "src"
    }
  },
  "require": {
    "php": ">=5.5.0",
    "consolidation/Robo": "~1",
    "boedah/robo-drush": "^3.0",
    "hassankhan/config": "^0.10"
  },
  "require-dev": {
    "phpunit/phpunit": "~4.4",
    "drush/drush": "~8"
  },
  "suggest": {
    "drush/drush": "robo-drush needs a global or local Drush to use."
  }
}
